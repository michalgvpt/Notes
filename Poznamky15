from PIL import Image
fr=open('kompresia_obrazka_1.txt','r')
fl=fr.readline().split()
img=Image.new('RGB',(int(fl[0]),int(fl[1])),'white')
pixels=img.load()
counter=0
for line in fr:
    for i in range(len(line)-1):
        if line[i]=='1':
            pixels[i,counter]=(255,255,255)
        else:
            pixels[i,counter]=(0,0,0)
    counter+=1

img.show()
